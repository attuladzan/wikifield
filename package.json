{
  "name": "wikifield",
  "version": "1.0.2",
  "description": "Визуальный редактор Markdown с поддержкой LaTeX и PlantUML",
  "license": "MIT",
  "author": "attuladzan",
  "repository": {
    "type": "git",
    "url": "https://github.com/attuladzan/wikifield.git"
  },
  "homepage": "https://github.com/attuladzan/wikifield#readme",
  "bugs": {
    "url": "https://github.com/attuladzan/wikifield/issues"
  },
  "keywords": [
    "markdown",
    "editor",
    "wysiwyg",
    "katex",
    "plantuml",
    "latex"
  ],
  "type": "module",
  "main": "dist/wikifield.js",
  "module": "dist/wikifield.js",
  "unpkg": "dist/wikifield.umd.cjs",
  "jsdelivr": "dist/wikifield.umd.cjs",
  "exports": {
    ".": {
      "import": "./dist/wikifield.js",
      "require": "./dist/wikifield.umd.cjs",
      "default": "./dist/wikifield.js"
    },
    "./style.css": "./dist/wikifield.css"
  },
  "files": [
    "dist/wikifield.js",
    "dist/wikifield.css",
    "dist/wikifield.umd.cjs"
  ],
  "sideEffects": [
    "dist/wikifield.css",
    "**/*.css"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "preview": "npm run build && npx serve dist -p 4173",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "release:patch": "npm version patch && git push --follow-tags",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:major": "npm version major && git push --follow-tags"
  },
  "dependencies": {
    "katex": "^0.16.9"
  },
  "devDependencies": {
    "vite": "^5.0.0"
  }
}
